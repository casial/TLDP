	</row>
	<row>
		<entry>man4</entry>
		<entry>Devices</entry>
	</row>
	<row>
		<entry>man5</entry>
		<entry>File formats</entry>
	</row>
	<row>
		<entry>man6</entry>
		<entry>Games</entry>
	</row>
	<row>
